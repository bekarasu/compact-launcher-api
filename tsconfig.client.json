{
  "compilerOptions": {
    "outDir": "./public/js/",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "typeRoots": ["./@types/client/**/*"],
    "types": ["@types/node"]
  },
  "include": ["./src/client/models/*", "./src/client/app/index.tsx"],
  "exclude": ["node_modules"]
}
