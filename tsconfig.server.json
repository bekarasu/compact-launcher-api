{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    /* it is required for importing tsx files */
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    /* it is temporary, we shouldn't use this*/
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "types": ["node", "express", "./@types/server"]
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}
